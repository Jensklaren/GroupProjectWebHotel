@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Building2.jpg" alt="WSH Building" class="img-responsive" width="1200" height="600" />
            <div class="carousel-caption" role="option">
                <p>
                    Western Sydney Hotel
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/DiningHall2.jpg" alt="Dining Hall" class="img-responsive" width="1200" height="600" />
            <div class="carousel-caption" role="option">
                <p>
                    Fine Dining
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/HotelRoom.jpg" alt="Hotel Room" class="img-responsive" width="1200" height="600" />
            <div class="carousel-caption" role="option">
                <p>
                    Luxuray Rooms
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/parramattaRiver.jpg" alt="Park" class="img-responsive" width="1200" />
            <div class="carousel-caption" role="option">
                <p>
                    Local Park
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-sm-6">
        <h2 style="text-align:center">Welcome to Western Sydney Hotel!</h2>
        <p style="text-align:center">
            The Western Sydney Hotel was established on 25th of September 2018,
            and we welcome you to stay as our guest. This was rated as a five star hotel,
            with quality customer service, fine dinning and luxuary rooms.
            Come along with your family and friends to enjoy a great experience starting
            from the low price of $56.30! What are you waiting for?
        </p>

    </div>
    <div class="col-sm-6">
        <h2>Important Links to Explore Parramatta:</h2>
        <ul>
            <li><a href="https://www.cityofparramatta.nsw.gov.au/living-community/things-to-do/the-arts">Visit the Parramatta Artist Studios</a></li>
            <li><a href="https://www.discoverparramatta.com/">Explore the Vast Nature Reserve Near to Parramatta River.</a></li>
            <li><a href="https://albionhotel.com.au/">Visit the Albion Hotel to get Something Good to Eat.</a></li>
            <li><a href="http://m.weatherzone.com.au/nsw/sydney/parramatta">The Local Weather of Parramatta.</a></li>
        </ul>
    </div>

</div>
