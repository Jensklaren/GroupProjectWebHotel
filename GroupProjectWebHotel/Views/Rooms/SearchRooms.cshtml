@model GroupProjectWebHotel.Models.SearchRoomsViewModel

@{
    ViewData["Title"] = "Search Rooms";

}

<h2>Search Rooms</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchRooms">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BedCount" class="control-label">Bed Count</label>
                <select asp-for="BedCount" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label">Check In Date</label>
                <input asp-for="CheckIn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label">Check Out Date</label>
                <input asp-for="CheckOut" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search Rooms" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@if (Model != null)
{
    <div>
        <hr />
        @if (ViewBag.Rooms.Count == 0)
        {
            <h4>There are no rooms with <b>@Model.BedCount</b> beds</h4>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        Room ID
                    </th>
                    <th>
                        Level
                    </th>
                    <th>
                        BedCount
                    </th>
                    <th>
                        Price
                    </th>
                </tr>

                @foreach (var item in ViewBag.Rooms)
                {
                    <tr>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.Level
                        </td>
                        <td>
                            @item.BedCount
                        </td>
                        <td>
                            @item.Price
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
    <h4>Please take down the information so you can make your booking!</h4>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
