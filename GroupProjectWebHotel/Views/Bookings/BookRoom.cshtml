@model GroupProjectWebHotel.Models.BookRoomViewModel

    @{
        ViewData["Title"] = "Book A Room";

    }

    <h2>Search Rooms</h2>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="BookRoom">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoomID" class="control-label">Room ID</label>
                    <select asp-for="RoomID" class="form-control" asp-items="@ViewBag.RoomID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CheckIn" class="control-label">Check In Date</label>
                    <input asp-for="CheckIn" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CheckOut" class="control-label">Check Out Date</label>
                    <input asp-for="CheckOut" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search Rooms" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    @if (ViewBag.RowsAffected != null)
    {
            <hr />        
            <h3>Your Booking has been completed with @ViewBag.RowAffected</h3>
    }

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }